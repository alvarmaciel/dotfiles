# -*- conf -*-
[general]
ui = Noninteractive.Basic
accounts = GMail, Sagem
#, Smartjog
maxsyncaccounts = 10
pythonfile = ~/.offlineimap-scripts/offlineimap.py

[Account GMail]
localrepository = LocalIMAP
remoterepository = GMailRemote
autorefresh = 1

[Repository LocalIMAP]
type = IMAP
remotehost = localhost
port = 143
preauthtunnel = /usr/sbin/dovecot --exec-mail imap

[Repository GMailRemote]
type = Gmail
#remoteuser = 0xa1f00@gmail.com
remoteusereval = get_username("imap.gmail.com")
remotepasseval = get_password("imap.gmail.com")
# remotepass = super_secret_password
holdconnectionopen = true
keepalive = 60
nametrans = lambda foldername: re.sub('^', 'Gmail.', foldername)
folderfilter = lambda foldername: re.search('INBOX', foldername)

#Setting realdelete = yes will Really Delete email from the server.
#Otherwise "deleting" a message will just remove any labels and
#retain the message in the All Mail folder.
realdelete = no

[Account Sagem]
localrepository = LocalIMAP
remoterepository = SagemRemote
autorefresh = 1

[Repository SagemRemote]
type = IMAP
remotehost = ruelm01sc.ads.local
remoteuser = niv.sardi@sagemcom.com
ssl = yes
# remotepass = super_secret_password
holdconnectionopen = true
keepalive = 60
nametrans = lambda foldername: re.sub('^', 'Sagem.', foldername)

#Setting realdelete = yes will Really Delete email from the server.
#Otherwise "deleting" a message will just remove any labels and
#retain the message in the All Mail folder.
realdelete = no

[Account Smartjog]
localrepository = LocalIMAP
remoterepository = SmartjogRemote
autorefresh = 1

[Repository SmartjogRemote]
type = IMAP
remotehost = imap-eu.smartjog.net
remoteuser = nsardi
ssl = yes
# remotepass = super_secret_password
holdconnectionopen = true
keepalive = 60
nametrans = lambda foldername: re.sub('^', 'SmartJog.', foldername)
#Setting realdelete = yes will Really Delete email from the server.
#Otherwise "deleting" a message will just remove any labels and
#retain the message in the All Mail folder.
realdelete = no
